<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/database"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="From Database"
        android:padding="10dp"
        android:background="@color/pageColor1"
        android:textSize="25sp"
        android:textAllCaps="false"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/network"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:text="Network"
        android:padding="10dp"
        android:background="@color/pageColor2"
        android:textSize="25sp"
        android:textAllCaps="false"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/database"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/dbAndNet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:background="@color/pageColor3"
        android:textSize="25sp"
        android:textAllCaps="false"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:text="Database And Network"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/network"
        tools:ignore="HardcodedText" />
</android.support.constraint.ConstraintLayout>